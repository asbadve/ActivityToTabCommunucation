<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:drawable="@color/collection_blue_selected" android:state_focused="true"/> <!-- focused -->
    <item android:drawable="@color/collection_blue_selected" android:state_focused="true" android:state_pressed="true" tools:ignore="StateListReachable"/> <!-- focused and pressed -->
    <item android:drawable="@color/collection_blue_selected" android:state_pressed="true"/> <!-- pressed -->
    <item android:drawable="@android:color/transparent"/> <!-- default -->

</selector>